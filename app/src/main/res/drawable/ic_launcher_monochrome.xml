<!--
  ~ DeepMinute App Icon - Monochrome Version (Android 12+ Themed Icon)
  ~
  ~ Single-color version that can be tinted by the system
  ~ Uses pure black/white for proper theming support
  -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

