    <!-- 2 o'clock (60 degrees) -->
    <path
        android:fillColor="#000000"
        android:pathData="M84,48 L79,54 L75,50 Z"/>

    <!-- 3 o'clock (90 degrees - right) -->
    <path
        android:fillColor="#000000"
        android:pathData="M80,54 L72,54 L72,56 L80,56 Z"/>

    <!-- 4 o'clock (120 degrees) -->
    <path
        android:fillColor="#000000"
        android:pathData="M84,60 L79,50 L75,54 Z"/>

    <!-- 5 o'clock (150 degrees) -->
    <path
        android:fillColor="#000000"
        android:pathData="M73,76 L71,68 L67,71 Z"/>

    <!-- 6 o'clock (180 degrees - bottom) -->
    <path
        android:fillColor="#000000"
        android:pathData="M56,80 L52,80 L52,76 L56,76 Z"/>

