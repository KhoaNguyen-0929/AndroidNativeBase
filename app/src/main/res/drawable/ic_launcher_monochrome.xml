    <!-- 11 o'clock (330 degrees) -->
    <path
        android:fillColor="#000000"
        android:pathData="M41,32 L37,37 L35,40 Z"/>

    <!-- Clock hands - showing "one minute past" -->
    <!-- Hour hand (shorter) - pointing to 12 -->
    <path
        android:fillColor="#000000"
        android:pathData="M54,54 L54,38 L56,38 L56,54 Z"/>

    <!-- Minute hand (longer) - pointing to the highlighted minute -->
    <path
        android:fillColor="#000000"
        android:pathData="M54,54 L54,26 L56,26 L56,54 Z"/>

    <!-- Center dot -->
    <circle
        android:fillColor="#000000"
        android:pathData="M54,52 m-2,0 a2,2 0,1,1 4,0 a2,2 0,1,1 -4,0"/>

    <!-- Small accent dot at center - representing focus point -->
    <circle
        android:fillColor="#000000"
        android:pathData="M54,54 m-1.5,0 a1.5,1.5 0,1,1 3,0 a1.5,1.5 0,1,1 -3,0"/>

