        android:fillColor="#000000"
        android:pathData="M54,16 m-38,0 a38,38 0,0,1 76,0 a38,38 0,0,1 -76,0"/>

    <!-- Clock marks - 12 marks around the circle -->
    <!-- All marks in monochrome for themed icon support -->

    <!-- 12 o'clock position (top) -->
    <path
        android:fillColor="#000000"
        android:pathData="M54,24 L58,30 L50,30 Z"/>

    <!-- 1 o'clock (30 degrees) -->
    <path
        android:fillColor="#000000"
